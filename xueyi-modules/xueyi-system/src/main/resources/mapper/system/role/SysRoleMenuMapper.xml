<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xueyi.system.role.mapper.SysRoleMenuMapper">

	<resultMap type="SysRoleMenu" id="SysRoleMenuResult">
		<id     property="roleId"      column="role_id"    />
		<result property="menuId"      column="menu_id"    />
	</resultMap>

	<select id="checkMenuExistRole" parameterType="com.xueyi.system.api.utilTool.SysSearch" resultType="java.lang.Integer">
		select count(1) from sys_role_menu rm
		where rm.role_id=#{search.menuId}
		<!-- 数据范围过滤 -->
		${params.dataScope}
	</select>

	<insert id="batchRoleMenu" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		insert into sys_role_menu (role_id, menu_id, tenant_id) values
		<foreach item="menuId" collection="search.menuIds" separator=",">
			(#{search.roleId}, #{menuId}, #{enterpriseId})
		</foreach>
	</insert>

	<delete id="deleteRoleMenuByRoleId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_menu
		where role_id = #{search.roleId}
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>

	<delete id="deleteRoleMenuByMenuId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_menu
		where menu_id = #{search.menuId}
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>

	<delete id="deleteRoleMenuByIds" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_menu where role_id in
		<foreach item="roleId" collection="search.roleIds" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>
</mapper>
