<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xueyi.system.role.mapper.SysRoleDeptPostMapper">

	<resultMap type="SysRoleDeptPost" id="SysRoleDeptPostResult">
		<id     property="roleId"      		column="role_id"    		/>
		<result property="deptPostId"      	column="dept_post_id"    	/>
	</resultMap>

	<select id="selectDeptPostList" parameterType="com.xueyi.system.api.utilTool.SysSearch" resultMap="SysRoleDeptPostResult">
		select rdp.role_id, rdp.dept_post_id
		from sys_role_dept_post rdp
		where 1 = 1
		<if test="search.roleId != null">
			AND rdp.role_id = #{search.roleId}
		</if>
		<if test="search.deptPostId != null">
			AND rdp.dept_post_id = #{search.deptPostId}
		</if>
		<!-- 数据范围过滤 -->
		${params.dataScope}
	</select>

	<select id="checkDeptPostExistRole" parameterType="com.xueyi.system.api.utilTool.SysSearch" resultType="java.lang.Integer">
		select count(1) from sys_role_dept_post rdp
		where rdp.dept_post_id = #{search.deptPostId}
		<!-- 数据范围过滤 -->
		${params.dataScope}
	</select>

	<insert id="batchRoleDeptPost" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		insert into sys_role_dept_post (role_id, dept_post_id, tenant_id) values
		<foreach item="deptPostId" collection="search.deptPostIds" separator=",">
			(#{search.roleId}, #{deptPostId}, #{enterpriseId})
		</foreach>
	</insert>

	<delete id="deleteRoleDeptPostByRoleId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_dept_post
		where role_id = #{search.roleId}
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>

	<delete id="deleteRoleDeptPostByDeptPostId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_dept_post
		where dept_post_id = #{search.deptPostId}
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>

	<delete id="deleteRoleDeptPostByIds" parameterType="com.xueyi.system.api.utilTool.SysSearch">
		delete from sys_role_dept_post where role_id in
		<foreach item="roleId" collection="search.roleIds" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		<!-- 数据范围过滤 -->
		${params.updateScope}
	</delete>
</mapper>
