<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xueyi.system.role.mapper.SysRoleSystemMapper">

    <resultMap type="SysRoleSystem" id="SysRoleSystemResult">
        <id     property="roleId"      column="role_id"    />
        <result property="systemId"    column="system_id"  />
    </resultMap>

    <select id="checkSystemExistRole" parameterType="com.xueyi.system.api.utilTool.SysSearch" resultType="java.lang.Integer">
        select count(1) from sys_role_system rs
        where rs.role_id=#{search.systemId}
        <!-- 数据范围过滤 -->
        ${params.dataScope}
    </select>

    <insert id="batchRoleSystem" parameterType="com.xueyi.system.api.utilTool.SysSearch">
        insert into sys_role_system (role_id, system_id, tenant_id) values
        <foreach item="systemId" collection="search.systemIds" open="(" separator="," close=")">
            (#{search.roleId}, #{systemId}, #{enterpriseId})
        </foreach>
    </insert>

    <delete id="deleteRoleSystemByRoleId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
        delete from sys_role_system
        where role_id = #{search.roleId}
        <!-- 数据范围过滤 -->
        ${params.updateScope}
    </delete>

    <delete id="deleteRoleSystemBySystemId" parameterType="com.xueyi.system.api.utilTool.SysSearch">
        delete from sys_role_system
        where system_id = #{search.systemId}
        <!-- 数据范围过滤 -->
        ${params.updateScope}
    </delete>

    <delete id="deleteRoleSystemByIds" parameterType="com.xueyi.system.api.utilTool.SysSearch">
        delete from sys_role_system where role_id in
        <foreach item="roleId" collection="search.roleIds" open="(" separator="," close=")">
            #{roleId}
        </foreach>
        <!-- 数据范围过滤 -->
        ${params.updateScope}
    </delete>
</mapper>
